<div class="container">
    <a href="/users/">Home</a>
      <p><% flash.each do |key, value|  %>
    <div class="alert alert-<%= key %>" role="alert">
        <p><%= value %> </p>
      </p>
    </div>
      <% end %>
    </p>
</div>

<div class="container-fluid padding">
  <div class="row padding">
    <div class="col-lg-4">
      <form action = "/users" method = "post">
        <div class="form-group">
          <input type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>" id ="reg_form">
            <label>First Name</label>          
          <input type = "text" name = "user[first_name]" id = "first_name">
        </div>

        <div class="form-group">
          <label>Last Name</label>       
            <input type = "text" name = "user[last_name]" id = "last_name">
        </div>

        <div class="form-group">
          <label>Email</label>      
            <input type = "text" name = "user[email]" id = "email">
        </div>

        <div class="form-group">
          <label>Password</label>
            <input type = "password" name = "user[password]" id = "password">
        </div>

        <div class="form-group">
          <label> Confirm Password</label>
            <input type = "password" name = "user[password_confirmation]" id = "password_confirm">
        </div>

          <input type = "submit" value = "Register">
      </form>
    </div>
    <div class="col-lg-6">
      <img class="carouselimg" src="https://images.unsplash.com/photo-1518988384617-19c470fe86b6?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=8d3567e2847c3a4f7195d1c990c907f8&auto=format&fit=crop&w=1950&q=80">
    </div>
  </div>
</div>
<hr class="my-4">
<!-- registration form --> 
      
  </div>
     
